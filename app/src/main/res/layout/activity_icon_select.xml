<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IconSelect">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="37dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="333dp"
        android:background="@android:color/transparent"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="323dp"
        android:layout_height="427dp"
        app:layout_constraintBottom_toTopOf="@+id/btnComplete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvIcon"
        app:srcCompat="@drawable/roundbeige" />

    <TextView
        android:id="@+id/tvIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/zzanggu"
        android:text="아이콘 선택"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imgBack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgBack">

        <TableRow>

            <RadioButton
                android:id="@+id/rbSleep"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/radio_moon"
                android:button="@null"
                android:onClick="clickRB"/>

            <RadioButton
                android:id="@+id/rbBed"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/radio_bed"
                android:button="@null"
                android:onClick="clickRB"/>

            <RadioButton
                android:id="@+id/rbComputer"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/radio_computer"
                android:button="@null"
                android:onClick="clickRB"/>
        </TableRow>

        <TableRow>

            <RadioButton
                android:id="@+id/rbExercise"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/radio_exercise"
                android:button="@null"
                android:onClick="clickRB"/>

            <RadioButton
                android:id="@+id/rbWater"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/radio_water"
                android:button="@null"
                android:onClick="clickRB"/>

            <RadioButton
                android:id="@+id/rbStudy"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/radio_study"
                android:button="@null"
                android:onClick="clickRB"/>
        </TableRow>

        <TableRow>

            <RadioButton
                android:id="@+id/rbReading"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/radio_reading"
                android:button="@null"
                android:onClick="clickRB"/>

            <RadioButton
                android:id="@+id/rbPill"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/radio_pill"
                android:button="@null"
                android:onClick="clickRB"/>

            <RadioButton
                android:id="@+id/rbMeal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/radio_meal"
                android:button="@null"
                android:onClick="clickRB"/>
        </TableRow>

        <TableRow>

            <RadioButton
                android:id="@+id/rbShopping"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/radio_shopping"
                android:button="@null"
                android:onClick="clickRB"/>

            <RadioButton
                android:id="@+id/rbBath"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/radio_bath"
                android:button="@null"
                android:onClick="clickRB"/>

            <RadioButton
                android:id="@+id/rbCleanup"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/radio_cleanup"
                android:button="@null"
                android:onClick="clickRB"/>
        </TableRow>
    </TableLayout>

    <RadioButton
        android:id="@+id/activeRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="38dp"
        android:button="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnComplete"
        android:layout_width="72dp"
        android:layout_height="32dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/roundorange"
        android:fontFamily="@font/zzanggu"
        android:text="완료"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.673"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>