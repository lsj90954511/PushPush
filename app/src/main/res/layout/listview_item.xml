<?xml version="1.0" encoding="utf-8"?>
<com.example.guru2project_22.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iconimg"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:scaleType="fitEnd" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="99dp"
        android:layout_height="16dp"
        android:layout_gravity="center"
        android:layout_marginLeft="46dp"
        android:fontFamily="@font/zzanggu"
        android:textColor="@color/black" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:button="@drawable/check_todolist" />

</com.example.guru2project_22.CheckableLinearLayout>